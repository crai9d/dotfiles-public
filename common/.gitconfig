[alias]
	st = status
	di = diff --color
	dc = diff --color --cached
	dp = diff --color --diff-algorithm=patience
	lo = log --graph --pretty=format:'%C(green)%h%C(auto)%d %<|(70)%s %C(magenta)%cr  %an %C(auto)' --color=auto
	dt = difftool --tool=vimdiff --no-prompt
	ch = cherry-pick

[include]
	path = ~/dotfiles/gitconfig_user

[core]
	excludesfile = ~/dotfiles-public/gitexcludesfile

[color "diff"]
	#meta = yellow
	frag = cyan

[merge]
	tool = vimdiff
	conflictstyle = diff3

[interactive]
	singleKey = true
[init]
	defaultBranch = master
[column]
	ui = auto
[diff]
	algorithm = histogram
